<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#fefefe"

    tools:context="com.example.mbmbmb.shopping.ShoppingList">

    <EditText
        android:layout_marginTop="40dp"
        android:hint="your address"
        android:id="@+id/et_user_address"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:textColor="#de051a"/>


    <ListView
        android:id="@+id/lv_shopping_items"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"></ListView>
    <TextView
        android:id="@+id/tv_total"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:textColor="#de051a"/>
    <Button
        android:id="@+id/btn_buy"
        android:layout_width="360dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="buy product           "
        android:drawableLeft="@drawable/dol"
        android:background="#de051a"
        android:textColor="@android:color/white"/>

</LinearLayout>
